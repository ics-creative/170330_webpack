{
  "compilerOptions": {
    // 厳密モードとして設定
    "strict": true,
    // ソースマップを有効化
    "sourceMap": true,
    // TSは下位ECMAScriptに変換
    "target": "ES2018",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2015",
    // JSXの書式を有効に設定
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "lib": [
      "ES2023",
      "DOM"
    ]
  }
}
